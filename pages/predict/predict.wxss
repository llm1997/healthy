.searchbar-result {
  margin-top: 0;
  font-size: 14px;
}

.searchbar-result:before {
  display: none;
}

.weui-cell {
  padding: 12px 15px 12px 35px;
}

.more {
  text-align: right;
  color: #66b3ff;
  font-size: 18px;
  font-family: "楷体";
}

.search-container {
  display: flex;
  flex-direction: column;
}

.search {
  width: 100%;
  font-family: "楷体";
  font-weight: 600;
}

.button_color {
  background-color: #add8e6;
}

.weui-search-bar__cancel-btn {
  color: #00bfff;
}

.reason {
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
}

.reason_illness {
  margin-left: 20px;
  display: flex;
  flex-direction: column;
}

.reason_illness_text {
  font-size: 50rpx;
  font-family: "华文行楷";
  display: flex;
  flex-direction: row;
}

.line {
  width: 100%;
  height: 2rpx;
  background: #aaa;
}

.weui-search-bar__cancel-btn {
  font-family: "楷体";
  font-weight: 600;
  font-size: 15px;
}

.weui-search-bar {
  background-color: #afeeee;
}

.illness_name {
  font-family: "楷体";
  font-weight: 600;
  background-color: #e0ffff;
}

.weui-panel__bd {
  background-color: #afeeee;
  margin-top: 1px;
}

.following {
  margin-top: 2px;
  background-color: #87CEFA;
  font-family: "楷体";
  font-weight: 600;
  font-size: 40rpx;
}
